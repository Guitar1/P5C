<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/phone_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_head_sculpture"
        android:background="@drawable/head_sculpture"
        android:layout_marginTop="@dimen/phone_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_contact_name"
        android:text="@string/contact_name"
        android:layout_marginTop="@dimen/phone_margin_top"
        style="@style/PhoneTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_call_time"
        android:layout_marginTop="@dimen/phone_margin_top"
        style="@style/PhoneTheme"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_call_state"
        android:text="@string/calling"
        android:layout_marginTop="@dimen/phone_margin_top"
        style="@style/PhoneTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_answer"
        android:text="@string/answer"
        android:layout_marginTop="@dimen/phone_margin_top"
        style="@style/PhoneTheme.Button"
        android:background="@drawable/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="@dimen/phone_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_hangup"
            android:text="@string/hangup"
            android:layout_centerInParent="true"
            style="@style/PhoneTheme.Button"
            android:background="@drawable/hangup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/btn_keyboard"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>


</LinearLayout>